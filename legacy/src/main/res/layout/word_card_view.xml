<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:layout_marginLeft="@dimen/margin_20px"
    android:layout_marginRight="@dimen/margin_20px"
    android:layout_marginTop="@dimen/margin_20px"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="2dp">

    <!-- @dimen/height_480px -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/container_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop" />

            <ImageButton
                android:id="@+id/ib_first_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_highlight_remove_grey600_24dp"
                android:background="@android:color/transparent"
                android:padding="5dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ib_second_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_highlight_remove_grey600_24dp"
                android:background="@android:color/transparent"
                android:padding="5dp" />

            <TextView
                android:id="@+id/tv_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20px"
                android:layout_marginTop="@dimen/margin_10px"
                android:textColor="@color/gray_757575"
                android:textStyle="bold|italic"
                tools:text="Language"/>

            <TextView
                android:id="@+id/tv_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_language"
                android:layout_marginLeft="@dimen/margin_20px"
                android:layout_marginRight="@dimen/margin_20px"
                android:textSize="@dimen/font_28sp"
                android:textColor="@android:color/black"
                tools:text="Word"/>

            <TextView
                android:id="@+id/tv_meaning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_word"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="@dimen/margin_20px"
                android:text="@string/txt_meaning"
                android:textSize="@dimen/font_18sp"
                android:textColor="@android:color/black"
                tools:text="Meaning"/>

            <!--<ImageView-->
                <!--android:id="@+id/ic_audio"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@drawable/ic_pronounced"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:visibility="gone"/>-->


        </RelativeLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>