<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat">
<!--        <item name="numberPickerStyle">@style/NPWidget.Holo.Light.NumberPicker</item>-->
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
<!--        <item name="numberPickerStyle">@style/NPWidget.Holo.Light.NumberPicker</item>-->
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="Theme.NumberPicker.old" parent="Theme.AppCompat.NoActionBar">
<!--        <item name="numberPickerStyle">@style/NPWidget.Holo.Light.NumberPicker</item>-->
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <!-- START - My customs style-->
    <style name="CustomEditText" parent="android:TextAppearance.Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_84px</item>
        <item name="android:background">@drawable/background_input_data</item>
        <item name="android:layout_marginTop">@dimen/margin_30px</item>
        <item name="android:textSize">@dimen/font_16sp</item>
        <item name="android:layout_marginLeft">@dimen/margin_20px</item>
        <item name="android:layout_marginRight">@dimen/margin_20px</item>
        <item name="android:paddingLeft">@dimen/padding_20px</item>
    </style>

    <style name="CustomTextView" parent="android:TextAppearance.Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_20px</item>
        <item name="android:layout_marginLeft">@dimen/margin_20px</item>
        <item name="android:layout_marginRight">@dimen/margin_20px</item>
    </style>

    <style name="SubTitle" parent="android:TextAppearance.Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_20px</item>
        <item name="android:layout_marginLeft">@dimen/margin_30px</item>
        <item name="android:layout_marginRight">@dimen/margin_20px</item>
        <item name="android:textSize">@dimen/font_14sp</item>
        <item name="android:textColor">@color/gray_757575</item>
    </style>

    <style name="TextAppearance.Cuprum.Bold" parent="android:TextAppearance">
        <item name="fontPath">fonts/Cuprum-Bold.ttf</item>
    </style>

    <!-- END - My customs style-->


    <!-- START - Refactor APP -->
    <style name="AppThemeDefault" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.RTM.Word.Translate" parent="TextAppearance.MaterialComponents.Overline">
        <!--<item name="android:textStyle">normal</item>-->
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.RTM.Word.Source" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textAllCaps">true</item>
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.RTM.Language" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Theme.RTM" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="Widget.RTM.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/Theme.RTM</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>
    <!-- END - Refactor APP -->

</resources>